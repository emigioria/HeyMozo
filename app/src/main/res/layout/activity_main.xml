<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_collapseParallaxMultiplier="1.0">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:stretchMode="spacingWidthUniform"
            tools:context="ar.edu.utn.frsf.isi.dam.del2016.heymozo.MainActivity"
            android:layout_centerHorizontal="true"
            android:baselineAligned="false"
            android:padding="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:id="@+id/btnQR"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:srcCompat="@drawable/qrw"
                        android:id="@+id/imageView1"
                        android:layout_rowWeight="1"
                        android:isScrollContainer="false"
                        android:padding="40dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:elevation="0dp"/>

                    <TextView
                        android:text="Escanear código\n QR"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:isScrollContainer="false"
                        android:adjustViewBounds="false"
                        android:id="@+id/textView1"
                        android:gravity="center"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
                        android:layout_width="match_parent"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="-20dp"
                        android:elevation="0dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:id="@+id/btnMapa"
                    android:elevation="4dp"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:srcCompat="@drawable/mapaw"
                        android:id="@+id/imageView2"
                        android:layout_rowWeight="1"
                        android:isScrollContainer="false"
                        android:padding="40dp"
                        android:adjustViewBounds="true"
                        android:elevation="0dp"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        />

                    <TextView
                        android:text="Ver restaurantes\n cercanos"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:isScrollContainer="false"
                        android:id="@+id/b"
                        android:gravity="center"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
                        android:layout_width="match_parent"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="-20dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:id="@+id/btnPedidos"
                    android:elevation="4dp"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:srcCompat="@drawable/cartaw"
                        android:id="@+id/imageView3"
                        android:layout_rowWeight="1"
                        android:adjustViewBounds="true"
                        android:padding="40dp"
                        android:layout_width="match_parent"
                        android:elevation="0dp"/>

                    <TextView
                        android:text="Ver mis pedidos"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:isScrollContainer="false"
                        android:adjustViewBounds="false"
                        android:id="@+id/textView3"
                        android:gravity="center"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
                        android:layout_width="match_parent"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="-20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:id="@+id/btnConfiguracion"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        app:srcCompat="@drawable/gearw"
                        android:id="@+id/imageView4"
                        android:layout_rowWeight="1"
                        android:adjustViewBounds="true"
                        android:padding="40dp"
                        android:layout_width="match_parent"
                        android:elevation="0dp"/>

                    <TextView
                        android:text="Configuración"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:isScrollContainer="false"
                        android:adjustViewBounds="false"
                        android:id="@+id/textView4"
                        android:gravity="center"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
                        android:layout_width="match_parent"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="-20dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.07"
                android:layout_margin="4dp"
                android:elevation="4dp"
                android:id="@+id/btnAyuda"
                android:background="@color/colorPrimary">

                <ImageView
                    android:layout_columnWeight="1"
                    app:srcCompat="@drawable/helpw"
                    android:id="@+id/imageView5"
                    android:layout_rowWeight="1"
                    android:adjustViewBounds="true"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:elevation="0dp"/>

                <TextView
                    android:text="Ayuda"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:isScrollContainer="false"
                    android:adjustViewBounds="false"
                    android:id="@+id/textView5"
                    android:gravity="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="-20dp"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
